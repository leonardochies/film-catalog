<div id="<%= dom_id movie %>">
    <div class="mb-3 d-flex align-items-center">
        <h2>
            <%= movie.title %>
        </h2>
        <span class="badge bg-secondary fs-6 ms-2">
            <%= movie.release_year %>
        </span>
    </div>

    <% if @movie.poster.attached? %>
        <%= image_tag @movie.poster, class: "img-fluid rounded", style: "width: 300px; height: auto;" %>
    <% end %>

  <div class="row mb-3 mt-3">
    <div class="">
      <p><strong><%= I18n.t("movies.show.duration") %>:</strong> <%= movie.duration %> minutos</p>
    </div>
    <div class="">
      <p><strong><%= I18n.t("movies.show.director") %>:</strong> <%= movie.director %></p>
    </div>
  </div>
  
  <div class="mb-3">
    <h5><%= I18n.t("movies.show.synopsis") %></h5>
    <p class="text-muted"><%= movie.synopsis %></p>
  </div>

    <% if movie.categories.any? %>
        <div class="mb-3">
        <strong><%= I18n.t("movies.show.categories") %>:</strong>
        <% movie.categories.each do |category| %>
            <span class="badge bg-info text-dark me-1"><%= t("categories.#{category.name}") %></span>
        <% end %>
        </div>
    <% end %>
</div>
